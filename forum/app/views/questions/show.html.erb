<div class="lead well">
    <div class="media">
        <div class="media-left media-middle">
            <a href="#">
            <img class="media-object" src="<%= @question.gravatar %>" >
            </a>
        </div>
        <div class="media-body">
            <h4 class="media-heading"><%= @question.email %></h4>
            <p> <%= time_ago_in_words(@question.created_at) %> ago</p>
            <p>Asked: <%= @question.body %> </P>
        </div>
    </div>
</div>
